---
import PageLayout from '../../layouts/PageLayout.astro';
import Hero from '../../components/Hero/Hero.astro';
import Link from '../../components/ui/Link.astro';

const title = 'About Me';
const hero = {
    mode: 'image',
    bg: 'bg-teal-400',
    scrollprompt: true,
    dark: true,
};
---

<PageLayout {title}>
    <Hero
        {title}
        hero={hero}
        slot="hero"
        x-data="{ shown: false }"
        x-intersect.threshold.25="shown = true"
    >
        <Fragment slot="content">
            <h1
                class="relative text-4xl/normal text-shadow-headline lg:text-7xl/none"
            >
                {title}
            </h1>
            <div class="rte">
                <p class="text-xl font-medium lg:text-2xl 2xl:text-3xl">
                    Iâ€™m a Surrey based Front-End developer with over two decades
                    of experience in digital.
                </p>
                <p class="flex flex-row gap-2">
                    <Link
                        theme="secondary"
                        class="inline-flex transform duration-300"
                        href="#main-content"
                    >
                        Read my bio <i
                            class="fa-regular fa-circle-down animate-nudge-down"
                        ></i>
                    </Link>
                    <Link theme="outline" href="/connect">Connect</Link>
                </p>
            </div>
        </Fragment>
        <Fragment slot="visual">
            <img
                src="/img/profile__hd.png"
                class="relative h-full w-full object-contain object-bottom"
                alt=""
            />
        </Fragment>
    </Hero>

    <slot name="main">
        <!-- Custom main content for the about page -->
        <p>We are a fantastic team doing amazing things.</p>
    </slot>

    <p>Hello</p>
</PageLayout>
