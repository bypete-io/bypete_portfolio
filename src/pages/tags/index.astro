---
import { getCollection } from 'astro:content';
import ListingLayout from '../../layouts/ListingLayout.astro';
import Tags from '~/components/ui/Tags.astro';
import utilities from '~/data/utilities.json';
const allPosts = await getCollection('posts');
const allWorks = await getCollection('work');
const collection = [...allPosts, ...allWorks];
let tags = [...new Set(collection.map((post) => post.data.tags).flat())];
const title = 'Tag index';
---

<ListingLayout title={title}>
    <Tags
        {tags}
        url={true}
        class="mx-auto flex w-full flex-wrap items-center gap-3 text-sm leading-none md:gap-4"
    />
</ListingLayout>
