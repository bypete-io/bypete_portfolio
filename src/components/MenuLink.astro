---
const { title, url, pathname, isHeroDark, class: className } = Astro.props;
const shade = isHeroDark
    ? 'text-herodark-menul1 hover:text-herodark-active focus:text-herodark-active'
    : 'text-herolight-menul1 hover:text-herolight-active focus:text-herolight-active';
const activeState = isHeroDark
    ? ' data-[state=active]:ring-herodark-highlight data-[state=active]:hover:text-herodark-menul1 data-[state=active]:hover:bg-transparent'
    : ' data-[state=active]:ring-herolight-highlight data-[state=active]:hover:text-herolight-menul1';
---

<a
    href={url}
    class:list={[
        'flex h-full items-center rounded-full p-2 text-base/none font-medium ring-2 ring-transparent transition duration-150 hover:bg-panel focus:bg-panel focus:outline-none',
        className,
        shade,
        activeState,
    ]}
    data-state={pathname === url ? 'active' : ''}>{title}</a
>
