---
const { title, url, pathname, isHeroDark, class: className } = Astro.props;
const legibility = isHeroDark
    ? 'text-menudark hover:text-menudark-active focus:text-menudark-active'
    : 'text-menu hover:text-menu-active focus:text-menu-active';
const activeState = isHeroDark
    ? ' data-[state=active]:ring-menudark-marker data-[state=active]:hover:text-menudark-active '
    : ' data-[state=active]:ring-menu-marker data-[state=active]:hover:text-menu-active';
---

<a
    href={url}
    class:list={[
        'flex h-full items-center rounded-full p-2 text-base/none font-medium ring-2 ring-transparent transition duration-150 hover:bg-panel focus:bg-panel focus:outline-none',
        className,
        legibility,
        activeState,
    ]}
    data-state={pathname === url ? 'active' : ''}>{title}</a
>
