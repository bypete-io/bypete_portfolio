---
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import { type SwiperClient } from '~/data/clients';
import 'swiper/css';
import 'swiper/css/navigation';
import 'swiper/css/pagination';

export interface Props {
    clients: Partial<SwiperClient>;
}

const { clients } = Astro.props;
---

<div
    class="swiper swiper--clients bg-panel py-fl-space-s lg:rounded-lg lg:border-x-2 lg:border-outline"
>
    <div class="swiper-wrapper not-prose flex items-center">
        {
            clients.map((client, i) => (
                <div class="slide swiper-slide flex items-center justify-center px-fl-space-m">
                    <Image
                        src={client.src}
                        alt={client.alt}
                        loading="eager"
                        class="max-h-fl-space-l w-auto max-w-fl-space-3xl opacity-60 grayscale transition-all hover:opacity-100 hover:filter-none "
                    />
                </div>
            ))
        }
    </div>
</div>

<script>
    // core version + navigation, pagination modules:
    import Swiper from 'swiper';
    import { Autoplay, Scrollbar } from 'swiper/modules';

    {
        const swiperClients = new Swiper('.swiper--clients', {
            // Install modules
            modules: [Autoplay, Scrollbar],
            speed: 1500,
            loop: true,
            loopAddBlankSlides: false,
            autoplay: {
                pauseOnMouseEnter: true,
                disableOnInteraction: false,
                delay: 6000,
            },
            breakpoints: {
                300: {
                    slidesPerView: 3,
                    slidesPerGroup: 3,
                },
                768: {
                    slidesPerView: 4,
                    slidesPerGroup: 4,
                },
                1024: {
                    slidesPerView: 6,
                    slidesPerGroup: 6,
                },
            },
        });
    }
</script>
