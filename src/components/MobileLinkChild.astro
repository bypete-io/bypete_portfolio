---
interface Props {
    title: string;
    url: string;
    pathname: string;
}
const { title, url, pathname } = Astro.props;
---

<a
    href={url}
    class="block w-full rounded-tight px-fl-space-2xs py-fl-space-3xs text-base text-menusm hover:text-menusm-hover focus:text-menusm-hover focus:outline-none data-[state=active]:font-semibold data-[state=active]:text-brand"
    data-state={pathname === url ? 'active' : ''}
>
    <span class="line-clamp-2" set:html={title} />
</a>
