---
interface Props {
    isHeroDark?: boolean;
    class?: string;
}
const { isHeroDark, class: className } = Astro.props;
const shade = isHeroDark ? 'bg-underlay-dark/90' : 'bg-underlay-light/90';
---

<div
    class:list={[
        'fixed inset-0 z-underlay h-full min-h-screen backdrop-blur-sm backdrop-grayscale',
        className,
        shade,
    ]}
    x-show="showUnderlay"
    @show-underlay.window="showUnderlay = $event.detail.visible"
    x-transition:enter="transition ease-out duration-150"
    x-transition:enter-start="opacity-0 "
    x-transition:enter-end="opacity-100 "
    x-transition:leave="transition ease-in duration-300"
    x-transition:leave-start="opacity-100 "
    x-transition:leave-end="opacity-0 "
    x-cloak
>
</div>
