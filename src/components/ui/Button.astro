---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
    theme?: 'primary' | 'secondary' | 'white' | 'outline' | 'quiet';
    class?: string;
    size?: 'sm' | 'md' | 'lg';
    type?: 'button' | 'submit' | 'reset';
    isIcon?: boolean;
}

const {
    theme = 'primary',
    class: className,
    size,
    type = 'button',
    isIcon = false,
    ...rest
} = Astro.props;
---

<button
    type={type}
    class:list={[
        'inline-flex items-center rounded-full px-4 py-2 align-middle font-bold transition-colors text-shadow-none hover:shadow-inset',
        size === 'sm' ? 'h-7 px-2.5 py-0 text-sm !leading-7' : 'text-base',
        theme === 'primary' && 'bg-accent text-white hover:border-black/10',
        theme === 'secondary' && 'bg-slate-900 text-white',
        theme === 'white' && 'bg-slate-900 text-white',
        theme === 'outline' && 'bg-transparent ring-2 ring-inset ring-gray-200',
        theme === 'quiet' &&
            'bg-transparent text-gray-700 hover:border-gray-300  hover:bg-gray-600 hover:text-white',

        isIcon && 'justify-between gap-x-1.5 pr-3',
        className,
    ]}
    {...rest}><slot /></button
>
