---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'button'> {
    theme?:
        | 'primary'
        | 'secondary'
        | 'white'
        | 'outline'
        | 'quiet'
        | 'disabled';
    class?: string;
    size?: 'sm' | 'md' | 'lg';
    type?: 'button' | 'submit' | 'reset';
    isIcon?: boolean;
}

const {
    theme = 'primary',
    class: className,
    size,
    type = 'button',
    isIcon = false,
    ...rest
} = Astro.props;
---

<button
    type={type}
    class:list={[
        'inline-flex items-center rounded-full px-4 py-2 align-middle font-bold transition-colors text-shadow-none hover:shadow-inset',
        size === 'sm' ? 'h-7 px-2.5 py-0 text-sm !leading-7' : 'text-base',
        theme === 'primary' &&
            'bg-accent text-white hover:border-black/10 hover:bg-accent-light ',
        theme === 'secondary' &&
            'bg-secondary hover:bg-secondary-dark text-white',
        theme === 'white' && 'bg-content-light text-content-dark',
        theme === 'outline' && 'bg-transparent ring-2 ring-inset ring-outline',
        theme === 'quiet' &&
            'text-quiet bg-transparent hover:border-gray-300  hover:bg-gray-600 hover:text-white',
        theme === 'disabled' &&
            'text-disabled ring-disabled hover:border-disabled hover:text-disabled bg-transparent  ring-2 hover:bg-transparent',
        isIcon && 'justify-between gap-x-1.5 pr-3',
        className,
    ]}
    {...rest}><slot /></button
>
