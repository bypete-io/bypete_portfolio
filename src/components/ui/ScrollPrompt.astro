---
import { Icon } from 'astro-icon/components';
---

<div
    x-data="{ scrolled: false }"
    x-cloak
    x-bind:class="scrolled ? 'opacity-0 transition delay-300 duration-300' : 'opacity-100'"
    @scroll.window="scrolled = ( window.pageYOffset > 25 ) ? true : false"
>
    <p class="m-0 flex gap-1">
        <span>Scroll</span>
        <Icon name="lucide:mouse" class="h-4 w-auto animate-nudge-down" />
    </p>
</div>
