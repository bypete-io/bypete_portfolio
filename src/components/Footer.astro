---
import { Icon } from 'astro-icon/components';
import Availability from './ui/Availability.astro';
import siteInfo from '~/data/site';
import Social from './Social.astro';

type Props = Record<string, never>;

const year = new Date().getFullYear();
---

<footer
    class="relative bg-footer bg-gradient-to-b from-footer-start to-footer-end py-fl-space-2xl text-content-footer shadow-inset"
>
    <div
        class="relative mx-auto grid max-w-container grid-cols-1 items-end gap-fl-space-s leading-none grid-areas-footer md:grid-cols-3 md:grid-areas-footerwide"
    >
        <a
            href="/"
            class="col-span-2 justify-self-start grid-in-logo"
            title="Return to home"
        >
            <Icon
                name="bypete__footer"
                title="byPete logo in white"
                class="h-fl-space-l w-auto"
            />
        </a>

        <ul class="-mx-fl-space-xs inline-flex leading-tight grid-in-legal">
            <li
                class="border-text-footer border-r px-fl-space-xs last:border-0"
            >
                Â©{year}
            </li>
            <li
                class="border-text-footer border-r px-fl-space-xs last:border-0"
            >
                <a href="/about/legal/" class="link">Legal notices</a>
            </li>
        </ul>
        <div
            class="-mx-fl-space-2xs flex justify-start grid-in-social md:justify-center"
        >
            {
                siteInfo.socials.map((channel) => (
                    <Social
                        platform={channel.platform}
                        url={channel.url}
                        name={channel.icon}
                    />
                ))
            }
        </div>
        <p
            class="grid-in-availability text-fl-step--1/relaxed md:justify-self-end"
        >
            I'm <Availability url={`/connect/`} /> for new roles.
        </p>
    </div>
</footer>
