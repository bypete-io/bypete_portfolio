---
import { Icon } from 'astro-icon';
import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import ThemeIcon from './ThemeIcon.astro';
const { isHeroDark } = Astro.props;
---

<header
    x-ref="banner"
    class="banner top-0 z-banner w-full py-6 delay-150 duration-300"
>
    <div class="mx-auto flex max-w-container items-center justify-between">
        <a href="/" aria-label="byPete - home">
            <Icon
                name="bypete--ribbon"
                class="banner__logo h-10 w-auto transition-all"
                alt="byPete logo"
            />
        </a>

        <ThemeIcon />
        <Navigation {isHeroDark} />
    </div>
</header>
<Hamburger />
