---
import type { HTMLAttributes } from 'astro/types';
import GridImage from '~/components/Blocks/GridImage.astro';
import utilities from '~/data/utilities.json';

export interface Props extends HTMLAttributes<'div'> {
    wrapper?: string;
    dark?: boolean;
    bg?: string;
    mode?: 'plain' | 'image' | 'custom';
    class?: string;
    legibility?: string;
    threshold?: number;
    isContained?: boolean;
    scrollprompt?: boolean;
    breakout?: boolean;
}

const fm = Astro.props.frontmatter || Astro.props;
const {
    dark = false,
    wrapper = '',
    bg = '',
    mode = 'plain',
    class: ClassName = '',
    legibility,
    isContained,
    scrollprompt,
    threshold,
    breakout,
    ...rest
} = fm as Props;

console.log(mode);

const intersect = {
    'x-data': `{ shown: false }`,
    [`x-intersect.threshold.${threshold}`]: `shown = true`,
};

const color = legibility || (dark ? 'text-white' : 'text-slate-800');
let wrapperClass = '';

switch (mode) {
    case 'plain':
        wrapperClass = `${
            wrapper || ''
        } max-w-container mx-auto pt-[var(--smheaderheight)] `;
        break;
    case 'image':
        wrapperClass = `${
            wrapper || ''
        } bg-white min-h-photo md:min-h-33vw xl:min-h-block`;
        break;
    case 'custom':
        wrapperClass = `${wrapper || ''} custom-wrapper`;
        break;
    // Add more cases as needed
    default:
    // Handle default case, if necessary
}
---

<div
    class:list={[
        'relative w-full outline-none',
        bg ? bg : '',
        color ? color : '',
        ClassName,
        wrapperClass,
        { 'overflow-hidden': isContained },
        breakout ? utilities.breakout : '',
    ]}
    {...threshold ? intersect : {}}
    {...rest}
>
    {
        mode === 'plain' && (
            <>
                <slot />
            </>
        )
    }
    {
        mode === 'image' && (
            <>
                <GridImage>
                    <slot slot="content" name="content" />
                    <slot slot="visual" name="visual" />
                </GridImage>
            </>
        )
    }

    {
        mode === 'custom' && (
            <>
                <slot />
            </>
        )
    }

    {
        scrollprompt && (
            <div class="pointer-events-none absolute bottom-0 left-1/2 z-shortcuts -translate-x-1/2 pb-4 md:pb-8">
                scrollprompt
            </div>
        )
    }
</div>

<script>
    import intersect from '@alpinejs/intersect';
    document.addEventListener('alpine:init', () => {
        Alpine.plugin(intersect);
    });
</script>
