---
import BaseLayout from './BaseLayout.astro';
import Hero from '~/components/Hero/Hero.astro';
import utilities from '~/data/utilities.json';

const props = Astro.props.frontmatter || Astro.props;
console.log(`PL | ${Astro.request.url} | Props:`, props);
---

<BaseLayout {...props}>
    <slot name="hero" slot="hero">
        <Hero hero={props.hero} title={props.title} />
    </slot>

    <main
        id="main-content"
        class:list={[
            'relative mx-auto max-w-container ',
            utilities.headergap,
            utilities.tramline.double.b,
        ]}
    >
        <div class="rte prose mx-auto max-w-3xl lg:prose-lg">
            <slot />
        </div>
    </main>
</BaseLayout>
